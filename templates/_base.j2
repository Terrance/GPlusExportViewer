{%- macro section(hero=none) %}
  <section{% if hero %} class="hero is-{{ hero }}"{% endif %}>
    {% if hero %}
      <div class="hero-body">
    {% endif %}
    <div class="container">
      {{ caller() }}
    </div>
    {% if hero %}
      </div>
    {% endif %}
  </section>
{% endmacro -%}

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}i{% endblock %}</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css"
      integrity="sha256-8B1OaG0zT7uYA572S2xOxWACq9NXYPQ+U5kHPV1bJN4=" crossorigin="anonymous">
    <style>
      .container > .box:first-child {
        margin-top: 1.5rem;
      }
      .container > .box:last-child {
        margin-bottom: 1.5rem;
      }
      .media .box > .media {
        border-top: none;
        padding-top: 0;
      }
      .media .box > .media figure {
        margin-left: 0;
        margin-right: 1rem;
      }
    </style>
  </head>
  <body>
    {% block main %}{% endblock %}
  </body>
</html>
